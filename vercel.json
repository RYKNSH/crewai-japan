{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "pnpm run build",
    "outputDirectory": "dist/public",
    "installCommand": "npm install -g pnpm && pnpm install",
    "framework": null,
    "functions": {
        "api/index.ts": {
            "runtime": "@vercel/node@3.2.30"
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ]
}